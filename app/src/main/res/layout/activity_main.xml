<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4E3B1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:textSize="16dp"
        android:textColor="#14325C"
        android:text="開始抽獎？"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="18dp"
        android:text="？？？"
        android:layout_marginTop="16dp"
        android:textColor="#D96B0C"
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.home.roundturntabledemo.view.component.RoundTurntableView
            android:id="@+id/rouletteImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_activity_main_arrow"/>
    </FrameLayout>
</LinearLayout>